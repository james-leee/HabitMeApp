<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.cs65project.habitme.AddHabitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shapelistlight">
            <TextView
                android:text="Habit Title:"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/activity_name"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/shapelistlight">

            <TextView
                android:text="How long do you plan to finish?"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <NumberPicker
                    android:id="@+id/hourpicker"
                    android:layout_width="40dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="Hour"

                    android:layout_gravity="center_vertical"/>
                <NumberPicker
                    android:id="@+id/minutepicker"
                    android:layout_width="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="Min"
                    android:layout_gravity="center_vertical"/>
                <NumberPicker
                    android:id="@+id/secondpicker"
                    android:layout_width="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="Sec"

                    android:layout_gravity="center_vertical"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/shapelistlight">

            <TextView
                android:text="How often do you plan to do?"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <NumberPicker
                    android:id="@+id/daypicker"
                    android:layout_width="40dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:layout_gravity="center_vertical"/>
                <NumberPicker
                    android:id="@+id/weekpicker"
                    android:layout_width="40dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="Week"
                    android:layout_gravity="center_vertical"/>
                <NumberPicker
                    android:id="@+id/monthpicker"
                    android:layout_width="40dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="Mon"

                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/shapelistlight">
            <TextView
                android:text="Where do you plan to do?"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/select_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="22dp"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/radio_button_library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"

                    android:text="Baker" />

                <RadioButton
                    android:id="@+id/radio_button_sudikoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"

                    android:text="Sudikoff" />

                <RadioButton
                    android:id="@+id/radio_button_gym"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:text="Gym" />

                <RadioButton
                    android:id="@+id/radio_button_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"

                    android:checked="true"
                    android:text="Other" />

            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</ScrollView>